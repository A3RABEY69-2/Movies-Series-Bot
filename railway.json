{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "healthCheck": {
      "path": "/",
      "intervalSeconds": 15, 
      "timeoutSeconds": 5
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "multiRegionConfig": {
      "europe-west4-drams3a": {
        "numReplicas": 1
      }
    }
  }
}
